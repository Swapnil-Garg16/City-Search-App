<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    tools:context="com.example.hp.citysearchapp.CityDetailsActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="510dp"
        card_view:cardBackgroundColor="#ffffff"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/citycode_heading"
                android:text="City Code : "
                android:textColor="#008080"

                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/citycode"
                android:layout_marginLeft="48dp"
                android:layout_alignTop="@+id/citycode_heading"
                android:layout_toRightOf="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:layout_marginStart="48dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/cityname"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="5sp"
                android:background="#d1d0ce"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City Name : "
                android:textSize="17sp"
                android:textColor="#008080"

                android:layout_marginTop="10sp"
                android:id="@+id/cityname_heading"
                android:layout_below="@+id/citycode_heading"
                android:layout_alignLeft="@+id/citycode_heading"
                android:layout_alignStart="@+id/citycode_heading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/cityname"
                android:layout_alignTop="@+id/cityname_heading"
                android:layout_alignLeft="@+id/citycode"
                android:layout_alignStart="@+id/citycode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details of the state : "
                android:id="@+id/textView"
                android:layout_marginTop="20sp"
                android:textColor="#008080"

                android:textSize="17sp"
                android:layout_below="@+id/cityname_heading"
                android:layout_alignLeft="@+id/cityname_heading"
                android:layout_alignStart="@+id/cityname_heading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State Code : "
                android:textColor="#008080"

                android:id="@+id/statecode_heading"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:layout_below="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/statecode"
                android:layout_alignTop="@+id/statecode_heading"
                android:layout_alignLeft="@+id/cityname"
                android:layout_alignStart="@+id/cityname" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State Name : "
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:id="@+id/textView3"
                android:textColor="#008080"

                android:layout_below="@+id/statecode_heading"
                android:layout_alignLeft="@+id/statecode_heading"
                android:layout_alignStart="@+id/statecode_heading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country Code : "
                android:textColor="#008080"

                android:id="@+id/textView4"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="5sp"
                android:background="#d1d0ce"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details of the country : "
                android:id="@+id/textView5"
                android:layout_marginTop="20sp"
                android:textSize="17sp"
                android:textColor="#008080"

                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country Code : "
                android:id="@+id/textView6"
                android:layout_marginTop="10sp"
                android:textColor="#008080"

                android:textSize="17sp"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country Name : "
                android:layout_marginTop="10sp"
                android:textColor="#008080"

                android:textSize="17sp"
                android:id="@+id/textView7"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISD Code : "
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:id="@+id/textView8"
                android:textColor="#008080"

                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="5sp"
                android:background="#d1d0ce"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPlace Id : "
                android:layout_marginTop="20sp"
                android:textSize="17sp"
                android:textColor="#008080"

                android:id="@+id/textView9"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude : "
                android:id="@+id/textView10"
                android:layout_marginTop="20sp"
                android:textSize="17sp"
                android:textColor="#008080"

                android:layout_below="@+id/textView9"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude : "
                android:id="@+id/textView11"
                android:textColor="#008080"

                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Status"
                android:id="@+id/textView12"
                android:layout_marginTop="5sp"
                android:textColor="#008080"

                android:textSize="17sp"
                android:layout_below="@+id/textView11"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statename"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignLeft="@+id/statecode"
                android:layout_alignStart="@+id/statecode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countrycode"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignLeft="@+id/statename"
                android:layout_alignStart="@+id/statename" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countrycode_one"
                android:layout_alignTop="@+id/textView6"
                android:layout_alignLeft="@+id/countrycode"
                android:layout_alignStart="@+id/countrycode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countryname"
                android:layout_alignTop="@+id/textView7"
                android:layout_alignLeft="@+id/countrycode"
                android:layout_alignStart="@+id/countrycode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/isdcode"
                android:layout_alignTop="@+id/textView8"
                android:layout_alignLeft="@+id/countryname"
                android:layout_alignStart="@+id/countryname" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gplaceid"
                android:layout_alignTop="@+id/textView9"
                android:layout_alignLeft="@+id/isdcode"
                android:layout_alignStart="@+id/isdcode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/latitude"
                android:layout_alignTop="@+id/textView10"
                android:layout_alignLeft="@+id/gplaceid"
                android:layout_alignStart="@+id/gplaceid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/longitude"
                android:layout_above="@+id/textView12"
                android:layout_alignLeft="@+id/latitude"
                android:layout_alignStart="@+id/latitude" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activestatus"
                android:layout_alignTop="@+id/textView12"
                android:layout_alignLeft="@+id/longitude"
                android:layout_alignStart="@+id/longitude" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
